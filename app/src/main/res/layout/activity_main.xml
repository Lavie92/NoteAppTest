<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoteDetailActivity">

    <!-- Toolbar -->
    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="114dp"
        android:layout_height="89dp"
        android:background="@android:color/transparent"
        android:contentDescription="back"
        android:drawableLeft="@drawable/back01" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="37dp"
        android:layout_toRightOf="@id/btnSignOut"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Thư mục"
        android:textColor="#ffde59"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_text"
        android:drawableLeft="@drawable/search"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Tìm kiếm ghi chú"
        android:textColor="#9C9C9C"
        android:textColorHint="#9C9C9C" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_above="@+id/btnCreateNote"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- RecyclerView -->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnCreateNote"
            android:layout_below="@+id/edtSearch" />
    </LinearLayout>



    <!-- Button -->
    <Button
        android:id="@+id/btnCreateNote"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="create"
        android:drawableLeft="@drawable/add01" />


</RelativeLayout>
